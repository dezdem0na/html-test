@import "normalize.css"
@import "skeleton.css"
@import "font.styl"
@import "base.styl"
@import "mixin.styl"

/* Mobile first queries */
.menu
  &__button
    display block
    line-height 36px
    position relative
    font-weight 500
    font-size: 1.2em;
    link()
    &:after
      content ""
      background url(../images/nav-icon.png) no-repeat
      width 30px
      height 30px
      display inline-block
      position absolute
      right 15px
      top 10px
  &__ul
    list-style none
    text-align center
  &__li
    font-weight 500
    display inline-block
    width 100%
    border-bottom 1px solid #3e3e3e
  &__a
    font-size: 1.2em;
    line-height 36px
    display inline-block
    link()

.about
  background-color #2f3032
  &__p
    text-align justify
  &__ul
    list-style none
    margin-left 1em
  &__ul_dash li:before
    content "â€”"
    position relative
    left -5px
  &__section
    padding-top 2em
  &__ul_alpha
    list-style-type lower-alpha
    margin-left 3em
  &__table
    width 100%

.footer
  height: 80px;
  margin-top: -80px;
  &__ul
    list-style:none;
    text-align: center;
    line-height 8.3em
  &__li
    display:inline;
  &__li+li:before
    content: '| '
  &__a
    font-size .9em
    padding: 0 1em;
    link()

/* Larger than mobile */
@media (min-width: 400px) {}

/* Larger than phablet */
@media (min-width: 550px) {}


/* Larger than tablet */
@media (min-width: 750px)
  .menu
    &__button
      display none
    &__ul
      width: 100%;
    &__li
      border none
      display inline
    &__a
      width 23%

  .menu
    &__a
      font-size 1em

/* Larger than desktop */
@media (min-width: 1000px)
  .menu
    &__a
      font-size 1.2em


/* Larger than Desktop HD */
@media (min-width: 1200px)
  .row
    padding 0 6.7em
  .row.no-padding
    padding-left 0
    padding-right 0