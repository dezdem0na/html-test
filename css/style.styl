@import "normalize.css"
@import "skeleton.css"
@import "font.styl"
@import "base.styl"
@import "mixin.styl"

/* Mobile first queries */
.menu
  &__button
    display block
    line-height 36px
    position relative
    font-weight 500
    font-size: 1.2em;
    link()
    &:after
      content ""
      background url(../images/nav-icon.png) no-repeat
      width 30px
      height 30px
      display inline-block
      position absolute
      right 15px
      top 10px
  &__ul
    list-style none
    text-align center
  &__li
    font-weight 500
    display inline-block
    width 100%
    border-bottom 1px solid #3e3e3e
  &__a
    font-size: 1.2em;
    line-height 36px
    display inline-block
    link()

.header
  background-image url(../images/top.png)
  background-size cover
  background-position center center
  padding 5em 0 4.5em

.features
  font-weight 100
  &__item
    list-item(0.2em)
  &__text
    font-size 1.2em
    line-height 1.2em
    list-text()
  &__icon
    list-icon(50px)
  &__icon_icon1
    background url(../images/item1.png) no-repeat
  &__icon_icon2
    background url(../images/item2.png) no-repeat
  &__icon_icon3
    background url(../images/item3.png) no-repeat

.section-order
.section-feedback
  background-color #2f3032
  &__h2
    text-align center

.section-order
    padding-bottom 1.8em

.feedback
  background-color #2f3032
  &__item
    list-item(2em)
    margin-left: 0;
  &__text
    list-text()
    padding: 0 0 0 1em;
  &__span
    font-weight 300
  &__icon
    list-icon(100px)
  &__icon_icon1
    background url(../images/man1.png) no-repeat
  &__icon_icon2
    background url(../images/man2.png) no-repeat

.order-form
  color #111
  &__img
    display none
  &__input
    margin-bottom 0.7em
    width 100%
  &__textarea
    width 100%
    height 137px
    margin-bottom 0.3em
  &__button
    font-size 1.2em
    float right
    font-weight 500
    color #fff
    background-color #9f9f9f
    border none
    padding 0.3em 1.8em
    height auto


.slider
  display none

.footer
  height: 80px;
  margin-top: -80px;
  &__ul
    list-style:none;
    text-align: center;
    line-height 8.3em
  &__li
    display:inline;
  &__li+li:before
    content: '| '
  &__a
    font-size .9em
    padding: 0 1em;
    link()



/* Larger than mobile */
@media (min-width: 400px) {}

/* Larger than phablet */
@media (min-width: 550px)
  .order-form .four.columns
    width 48%
  .order-form .four.columns.empty
    width 0

  .feedback
    .six.columns
      width 100%

  .section-order
  .section-feedback
    &__h2
      text-align left

/* Larger than tablet */
@media (min-width: 750px)
  .menu
    &__button
      display none
    &__ul
      width: 100%;
    &__li
      border none
      display inline
    &__a
      width 23%

  .feedback
    .six.columns
      width 48%

  .menu
    &__a
      font-size 1em

/* Larger than desktop */
@media (min-width: 1000px)
  .menu
    &__a
      font-size 1.2em
  .feedback
    padding: 1.9em 0 0 0
  .order-form
    padding-top 3.3em
  .order-form .four.columns
    width 30.6666666667%
    .order-form .four.columns.empty
      width 30.6666666667%
  .slider
    display block
    font-size .8em
    padding-top 1.9em
    &__select
      display none
    &__p
      padding-bottom 1.2em
      font-size 1.3em
    &__numbers
      display table
      width 100%
    &__range
      display table-cell
    &__range:last-child
      text-align: right;

/* Larger than Desktop HD */
@media (min-width: 1200px)
  .feedback
    &__item:last-child
      padding-left 4em
  .slider
    font-size .9em
  .row
    padding 0 6.7em
  .row.no-padding
    padding-left 0
    padding-right 0
  .order-form .four.columns
    margin-left 1.1%
  .order-form .four.columns:first-child
    margin-left 0
  .order-form
    &__img
      display block
      position absolute
      bottom -1.8em
      right 9em

